<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="myFirstJpaUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.gwtplatform.samples.basic.server.data.UserEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.CampusEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.DepartementEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.DispoDayRelationshipEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.DisponibilityEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.FacultyEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.FunctionEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.LocalEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.LocalCaracteristicRelEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.LocalCaracteristiqueEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.PavillonEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.ReservationEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.RoleEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.UserTypeEntity</class>
        <class>com.gwtplatform.samples.basic.server.data.WeekDayEntity</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/app1_sandbox"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="uber4jar"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
